<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/conserback"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/bienvenido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Bienvenido"
        android:textColor="#000000"
        android:layout_marginLeft="110dp"
        android:textSize="30dp"
        android:textStyle="italic"
        android:typeface="serif"
        android:layout_row="0"
        android:layout_column="2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:layout_row="1"
        android:layout_column="2"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="245dp"
            android:layout_marginLeft="0dp"
            android:layout_height="282dp"

            android:layout_weight="0.49">

            <ImageView
                android:id="@+id/iitch"
                android:layout_width="110dp"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/itche_logo"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="90dp"
                />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="195dp"
            android:layout_marginLeft="-52dp"
            android:layout_height="282dp">


            <ImageView
                android:id="@+id/imgCN"
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:background="@drawable/cn"
                android:scaleType="fitXY"
                android:src="@drawable/imground"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="92dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="204dp"
        android:layout_row="2"
        android:layout_column="2"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp">
            <TextView
                android:id="@+id/itc"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginBottom="133dp"
                android:text="Instituto Tecnologico de Chetumal."
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="italic"
                android:typeface="serif"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="29dp"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="56dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="&amp;"
                android:textSize="16dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="175dp"
                android:textColor="#000000"
                android:textStyle="italic"
                android:typeface="serif"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/itch"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Centro de InovaciÃ³n Tecnologica"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="italic"
                android:typeface="serif"
                android:layout_marginBottom="65dp"
                android:layout_marginLeft="64dp"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="6"
        android:layout_column="2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Team SUAPP &amp; CITQROO"
            android:id="@+id/textView"
            android:textSize="13dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </LinearLayout>

</GridLayout>